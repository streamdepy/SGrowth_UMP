<main class="flex flex-col items-start self-center ml-48 mt-16 w-full max-w-[1168px] max-md:mt-10 max-md:max-w-full">
  <header class="flex gap-3.5 self-start">
    <img
      src="https://api.builder.io/api/v1/image/assets/TEMP/a2c214fc5ad90d019c67cc350eaa8b5e4005560c?placeholderIfAbsent=true&apiKey=ac04cd396e1f47f18955cd19640f183d"
      alt="GRI Economic icon"
      class="object-contain shrink-0 my-auto rounded-full aspect-[1.04] w-[58px]"
    />
    <div class="flex flex-col">
      <h2 class="text-4xl font-semibold text-black">
        GRI Economic
      </h2>
      <p class="self-center text-xl font-medium leading-none text-center text-gray-500">
        Economic Performance - Summary
      </p>
    </div>
  </header>

  <section class="self-stretch pt-12 pb-20 pl-16 mb-16 mt-10 bg-white rounded-2xl shadow-2xl max-md:pl-5 max-md:max-w-full">
    <div class="flex gap-5 max-md:flex-col">
      <aside class="w-[31%] max-md:ml-0 max-md:w-full">
        <div class="flex flex-col items-start text-xl font-semibold leading-none text-gray-500 max-md:mt-10">
          <h2 class="self-stretch text-3xl text-teal-700">
            Automatic Summary
          </h2>

          <div class="mt-16 font-medium text-gray-500 max-md:mt-10">
            Total Revenue
          </div>
          <div class="mt-7 text-4xl leading-none text-teal-700">
            Rp.
            {{#if summary}}{{summary.revenue}}{{else}}{{record.revenue}}{{/if}}
          </div>

          <div class="mt-8 font-medium text-gray-500">
            Total Operational Costs
          </div>
          <div class="mt-7 text-4xl leading-none text-teal-700">
            Rp.
            {{#if summary}}{{summary.operational}}{{else}}{{totalOps}}{{/if}}
          </div>

          <div class="mt-6 font-medium text-gray-500">
            Total Non-Operating Costs
          </div>
          <div class="mt-7 text-4xl leading-none text-teal-700">
            Rp.
            {{#if summary}}{{summary.non_operating_expenses}}{{else}}{{record.non_operating_expenses}}{{/if}}
          </div>
          <div class="mt-6 font-medium text-gray-500">
            Profit/Loss
          </div>
          <div class="mt-7 text-4xl leading-none text-teal-700">
            Rp.
            {{#if summary}}{{summary.untung}}{{else}}{{untung}}{{/if}}
          </div>
        </div>
      </aside>

      <article class="ml-5 w-[59%] max-md:ml-0 max-md:w-full">
        <!-- Summary Table -->
        <div class="overflow-x-auto mt-10 max-md:max-w-full">
          <table class="min-w-full table-auto">
            <thead class="bg-teal-700 text-white">
              <tr>
                <th class="px-4 py-2">Category</th>
                <th class="px-4 py-2">Amount (Rp)</th>
                <th class="px-4 py-2">Notes</th>
              </tr>
            </thead>
            <tbody>
      <!-- Net Sales -->
            <tr>
              <td class="border px-4 py-2">Net Sales </td>
              <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.net_sales}}{{else}}{{record.net_sales}}{{/if}}</td>
              <td class="border px-4 py-2">{{record.net_sales_notes}}</td>
            </tr>

            <!-- Sales -->
            <tr>
              <td class="border px-4 py-2">Sales </td>
              <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.sales}}{{else}}{{record.sales}}{{/if}}</td>
              <td class="border px-4 py-2">{{record.sales_notes}}</td>
            </tr>

            <!-- Financial Investment Income -->
            <tr>
              <td class="border px-4 py-2">Financial Investment Income </td>
              <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.financial_investment_income}}{{else}}{{record.financial_investment_income}}{{/if}}</td>
              <td class="border px-4 py-2">{{record.financial_investment_income_notes}}</td>
            </tr>

            <!-- Income from Asset Sales -->
            <tr>
              <td class="border px-4 py-2">Income from Asset Sales</td>
              <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.asset_sales_income}}{{else}}{{record.asset_sales_income}}{{/if}}</td>
              <td class="border px-4 py-2">{{record.asset_sales_income_notes}}</td>
            </tr>
              <!-- Salary Expenses -->
              <tr>
                <td class="border px-4 py-2">Salary Expenses (Wages and Salaries)</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.salary_expenses}}{{else}}{{record.salary_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.salary_employee_notes}}</td>
              </tr>

              <!-- Transportation Expenses -->
              <tr>
                <td class="border px-4 py-2">Transportation Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.transport_expenses}}{{else}}{{record.transport_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.transport_notes}}</td>
              </tr>

              <!-- Fuel Expenses -->
              <tr>
                <td class="border px-4 py-2">Fuel Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.fuel_expenses}}{{else}}{{record.fuel_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.fuel_notes}}</td>
              </tr>

              <!-- Electricity Expenses -->
              <tr>
                <td class="border px-4 py-2">Electricity Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.electricity_expenses}}{{else}}{{record.electricity_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.electricity_notes}}</td>
              </tr>

              <!-- Internet Expenses -->
              <tr>
                <td class="border px-4 py-2">Internet Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.internet_expenses}}{{else}}{{record.internet_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.internet_notes}}</td>
              </tr>

              <!-- Telephone Expenses -->
              <tr>
                <td class="border px-4 py-2">Telephone Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.telephone_expenses}}{{else}}{{record.telephone_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.telephone_notes}}</td>
              </tr>

              <!-- Water Expenses -->
              <tr>
                <td class="border px-4 py-2">Water Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.water_expenses}}{{else}}{{record.water_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.water_notes}}</td>
              </tr>

              <!-- Non-Operating Expenses -->
              <tr>
                <td class="border px-4 py-2">Non-Operating Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.non_operating_expenses}}{{else}}{{record.non_operating_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.non_operating_notes}}</td>
              </tr>

              <!-- Property Rental Expenses -->
              <tr>
                <td class="border px-4 py-2">Property Rental Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.property_rental_expenses}}{{else}}{{record.property_rental_expenses}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.property_rental_notes}}</td>
              </tr>

              <!-- License Fees -->
              <tr>
                <td class="border px-4 py-2">License Fees</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.license_fees}}{{else}}{{record.license_fees}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.license_fees_notes}}</td>
              </tr>

              <!-- Facility Payments -->
              <tr>
                <td class="border px-4 py-2">Facility Payments</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.facility_payments}}{{else}}{{record.facility_payments}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.facility_payments_notes}}</td>
              </tr>

              <!-- Royalties -->
              <tr>
                <td class="border px-4 py-2">Royalties</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.royalties}}{{else}}{{record.royalties}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.royalties_notes}}</td>
              </tr>

              <!-- Contract Worker Payments -->
              <tr>
                <td class="border px-4 py-2">Contract Worker Payments</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.contract_worker_payments}}{{else}}{{record.contract_worker_payments}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.contract_worker_notes}}</td>
              </tr>

              <!-- Training Costs -->
              <tr>
                <td class="border px-4 py-2">Training Costs</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.training_costs}}{{else}}{{record.training_costs}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.training_costs_notes}}</td>
              </tr>

              <!-- Protective Clothing Costs -->
              <tr>
                <td class="border px-4 py-2">Protective Clothing Costs</td>
                <td class="border px-4 py-2">Rp. {{#if summary}}{{summary.protective_clothing_costs}}{{else}}{{record.protective_clothing_costs}}{{/if}}</td>
                <td class="border px-4 py-2">{{record.protective_clothing_notes}}</td>
              </tr>
            </tbody>
          </table>
        </div>


        <!-- Largest Expense Percentage -->
        <div class="mt-10">
          <h3 class="text-2xl font-semibold text-teal-700">Largest Expense Percentage</h3>
          {{#if biggestExpense.category}}
            <p class="text-lg text-gray-500 mt-4">
              {{biggestExpense.category}}
              is the largest expense, reaching
              {{biggestExpense.percentage}}% of total operational costs.
            </p>
          {{else}}
            <p class="text-lg text-gray-500 mt-4">No operational cost data entered yet.</p>
          {{/if}}
        </div>

        <!-- Document Completeness -->
        <div class="mt-10">
          <h3 class="text-2xl font-semibold text-teal-700">Document Completeness</h3>
          <div class="flex gap-3 items-start py-3 mt-5">
            <img
              src="https://api.builder.io/api/v1/image/assets/TEMP/07f51810f5a8ec72f99a964de708e535be5afefe?placeholderIfAbsent=true&apiKey=ac04cd396e1f47f18955cd19640f183d"
              alt="Checkmark"
              class="object-contain shrink-0 w-5 rounded aspect-square"
            />
            <span>Financial Report</span>
          </div>
          <div class="flex gap-3 items-start py-3 mt-2">
            <img
              src="https://api.builder.io/api/v1/image/assets/TEMP/887a221a718e07029faaf64255641f813cfbf431?placeholderIfAbsent=true&apiKey=ac04cd396e1f47f18955cd19640f183d"
              alt="Checkmark"
              class="object-contain shrink-0 w-5 rounded aspect-square"
            />
            <span>Sales Record</span>
          </div>
          <div class="flex gap-3 items-start py-3 mt-2">
            <img
              src="https://api.builder.io/api/v1/image/assets/TEMP/4809160e8bf8862d1b2b4c7165060c1229b7004f?placeholderIfAbsent=true&apiKey=ac04cd396e1f47f18955cd19640f183d"
              alt="Checkmark"
              class="object-contain shrink-0 w-5 rounded aspect-square"
            />
            <span>Expense Record</span>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="flex gap-5 justify-between self-center mt-20 ml-72 max-w-full text-base font-medium text-center w-[323px]">
          <a href="/mitra/gri-1?gri_id={{gri_id}}&period={{reporting_period}}" class="px-10 py-3 text-teal-700 bg-white rounded-xl border border-teal-700 hover:bg-teal-50 transition">
            Previous
          </a>
          <a href="/mitra/dashboard" class="px-10 py-3 text-white bg-lime-500 rounded-xl hover:bg-lime-600 transition">
            Submit
          </a>
        </nav>

      </article>
    </div>
  </section>
</main>
