<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Skills program addition
    const skillsAddBtn = document.getElementById('skills_add_item');
    const skillsList = document.getElementById('skills_program_list');
    const skillsTpl = document.getElementById('skills_item_tpl');

    skillsAddBtn.addEventListener('click', function() {
      const clone = skillsTpl.content.firstElementChild.cloneNode(true);
      skillsList.appendChild(clone);
      const removeBtn = clone.querySelector('.remove-btn');
      removeBtn.addEventListener('click', function() {
        clone.remove();
      });
    });

    // Transition assistance program addition
    const transitionAddBtn = document.getElementById('transition_add_item');
    const transitionList = document.getElementById('transition_program_list');
    const transitionTpl = document.getElementById('transition_item_tpl');

    transitionAddBtn.addEventListener('click', function() {
      const clone = transitionTpl.content.firstElementChild.cloneNode(true);
      transitionList.appendChild(clone);
      const removeBtn = clone.querySelector('.remove-btn');
      removeBtn.addEventListener('click', function() {
        clone.remove();
      });
    });
  });
</script>
