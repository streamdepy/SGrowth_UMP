<main class="flex flex-col items-start self-center ml-48 mt-16 w-full max-w-[1168px] max-md:mt-10 max-md:max-w-full">
  <header class="flex gap-3.5 self-start">
    <img
      src="https://api.builder.io/api/v1/image/assets/TEMP/a2c214fc5ad90d019c67cc350eaa8b5e4005560c?placeholderIfAbsent=true&apiKey=ac04cd396e1f47f18955cd19640f183d"
      alt="GRI Economic icon"
      class="object-contain shrink-0 my-auto rounded-full aspect-[1.04] w-[58px]"
    />
    <div class="flex flex-col">
      <h2 class="text-4xl font-semibold text-black">
        GRI Economic
      </h2>
      <p class="self-center text-xl font-medium leading-none text-center text-gray-500">
        Economic Performance - Summary
      </p>
    </div>
  </header>

  <section class="self-stretch pt-12 pb-20 pl-16 mb-16 mt-10 bg-white rounded-2xl shadow-2xl max-md:pl-5 max-md:max-w-full">
    <div class="flex gap-5 max-md:flex-col">
      <aside class="w-[31%] max-md:ml-0 max-md:w-full">
        <div class="flex flex-col items-start text-xl font-semibold leading-none text-gray-500 max-md:mt-10">
          <h2 class="self-stretch text-3xl text-teal-700">
            Automatic Summary
          </h2>

          <div class="mt-16 font-medium text-gray-500 max-md:mt-10">
            Total Revenue
          </div>
          <div class="mt-7 text-4xl leading-none text-teal-700">
            Rp. {{#if revenue}}{{revenue}}{{else}}0{{/if}}
          </div>

          <div class="mt-8 font-medium text-gray-500">
            Total Operational Costs
          </div>
          <div class="mt-7 text-4xl leading-none text-teal-700">
            Rp. {{#if totalOperational}}{{totalOperational}}{{else}}0{{/if}}
          </div>

          <div class="mt-6 font-medium text-gray-500">
            Total Non-Operating Costs
          </div>
          <div class="mt-7 text-4xl leading-none text-teal-700">
            Rp. {{#if totalNonOperating}}{{totalNonOperating}}{{else}}0{{/if}}
          </div>

          <div class="mt-6 font-medium text-gray-500">
            Profit/Loss
          </div>
          <div class="mt-7 text-4xl leading-none {{profitLossColor}}">
            Rp. {{#if profitLoss}}{{profitLoss}}{{else}}0{{/if}}
          </div>
        </div>
      </aside>

      <article class="ml-5 w-[59%] max-md:ml-0 max-md:w-full">
        <!-- Summary Table -->
        <div class="overflow-x-auto mt-10 max-md:max-w-full">
          <table class="min-w-full table-auto">
            <thead class="bg-teal-700 text-white">
              <tr>
                <th class="px-4 py-2">Category</th>
                <th class="px-4 py-2">Amount (Rp)</th>
                <th class="px-4 py-2">Notes</th>
              </tr>
            </thead>
            <tbody>
              <!-- REVENUE SECTION -->
              <tr class="bg-teal-50">
                <td colspan="3" class="border px-4 py-2 font-semibold text-teal-700">REVENUE</td>
              </tr>

              <!-- Net Sales -->
              <tr>
                <td class="border px-4 py-2">Net Sales</td>
                <td class="border px-4 py-2">Rp. {{#if net_sales}}{{net_sales}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if net_sales_notes}}{{net_sales_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Sales -->
              <tr>
                <td class="border px-4 py-2">Sales</td>
                <td class="border px-4 py-2">Rp. {{#if sales}}{{sales}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if sales_notes}}{{sales_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Financial Investment Income -->
              <tr>
                <td class="border px-4 py-2">Financial Investment Income</td>
                <td class="border px-4 py-2">Rp. {{#if financial_investment_income}}{{financial_investment_income}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if financial_investment_income_notes}}{{financial_investment_income_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Income from Asset Sales -->
              <tr>
                <td class="border px-4 py-2">Income from Asset Sales</td>
                <td class="border px-4 py-2">Rp. {{#if asset_sales_income}}{{asset_sales_income}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if asset_sales_income_notes}}{{asset_sales_income_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- EXPENSES SECTION -->
              <tr class="bg-orange-50">
                <td colspan="3" class="border px-4 py-2 font-semibold text-orange-700">EXPENSES</td>
              </tr>

              <!-- General & Administrative Expenses -->
              <tr>
                <td class="border px-4 py-2">General & Administrative Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if general_admin_expenses}}{{general_admin_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if general_admin_notes}}{{general_admin_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Salary Expenses -->
              <tr>
                <td class="border px-4 py-2">Salary Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if salary_expenses}}{{salary_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if salary_employee_notes}}{{salary_employee_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Transportation Expenses -->
              <tr>
                <td class="border px-4 py-2">Transportation Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if transport_expenses}}{{transport_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if transport_notes}}{{transport_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Fuel Expenses -->
              <tr>
                <td class="border px-4 py-2">Fuel Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if fuel_expenses}}{{fuel_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if fuel_notes}}{{fuel_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Electricity Expenses -->
              <tr>
                <td class="border px-4 py-2">Electricity Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if electricity_expenses}}{{electricity_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if electricity_notes}}{{electricity_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Internet Expenses -->
              <tr>
                <td class="border px-4 py-2">Internet Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if internet_expenses}}{{internet_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if internet_notes}}{{internet_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Telephone Expenses -->
              <tr>
                <td class="border px-4 py-2">Telephone Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if telephone_expenses}}{{telephone_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if telephone_notes}}{{telephone_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Water Expenses -->
              <tr>
                <td class="border px-4 py-2">Water Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if water_expenses}}{{water_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if water_notes}}{{water_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Property Rental Expenses -->
              <tr>
                <td class="border px-4 py-2">Property Rental Expenses</td>
                <td class="border px-4 py-2">Rp. {{#if property_rental_expenses}}{{property_rental_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if property_rental_notes}}{{property_rental_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- License Fees -->
              <tr>
                <td class="border px-4 py-2">License Fees</td>
                <td class="border px-4 py-2">Rp. {{#if license_fees}}{{license_fees}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if license_fees_notes}}{{license_fees_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Facility Payments -->
              <tr>
                <td class="border px-4 py-2">Facility Payments</td>
                <td class="border px-4 py-2">Rp. {{#if facility_payments}}{{facility_payments}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if facility_payments_notes}}{{facility_payments_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Royalties -->
              <tr>
                <td class="border px-4 py-2">Royalties</td>
                <td class="border px-4 py-2">Rp. {{#if royalties}}{{royalties}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if royalties_notes}}{{royalties_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Contract Worker Payments -->
              <tr>
                <td class="border px-4 py-2">Contract Worker Payments</td>
                <td class="border px-4 py-2">Rp. {{#if contract_worker_payments}}{{contract_worker_payments}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if contract_worker_notes}}{{contract_worker_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Training Costs -->
              <tr>
                <td class="border px-4 py-2">Training Costs</td>
                <td class="border px-4 py-2">Rp. {{#if training_costs}}{{training_costs}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if training_costs_notes}}{{training_costs_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Protective Clothing Costs -->
              <tr>
                <td class="border px-4 py-2">Protective Clothing Costs</td>
                <td class="border px-4 py-2">Rp. {{#if protective_clothing_costs}}{{protective_clothing_costs}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if protective_clothing_notes}}{{protective_clothing_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Dividend & Interest Expenses -->
              <tr>
                <td class="border px-4 py-2">Dividend & Interest Payments</td>
                <td class="border px-4 py-2">Rp. {{#if dividend_interest_expenses}}{{dividend_interest_expenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if dividend_interest_notes}}{{dividend_interest_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Taxes -->
              <tr>
                <td class="border px-4 py-2">Taxes</td>
                <td class="border px-4 py-2">Rp. {{#if taxes}}{{taxes}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if taxes_notes}}{{taxes_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- Community Investment -->
              <tr>
                <td class="border px-4 py-2">Community Investment</td>
                <td class="border px-4 py-2">Rp. {{#if community_investment}}{{community_investment}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">{{#if community_investment_notes}}{{community_investment_notes}}{{else}}-{{/if}}</td>
              </tr>

              <!-- TOTAL ROW -->
              <tr class="bg-gray-100 font-semibold">
                <td class="border px-4 py-2">TOTAL EXPENSES</td>
                <td class="border px-4 py-2">Rp. {{#if totalExpenses}}{{totalExpenses}}{{else}}0{{/if}}</td>
                <td class="border px-4 py-2">-</td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Largest Expense Percentage -->
        <div class="mt-10">
          <h3 class="text-2xl font-semibold text-teal-700">Largest Expense Analysis</h3>
          {{#if biggestExpense}}
            <p class="text-lg text-gray-500 mt-4">
              <span class="font-semibold">{{biggestExpense.category}}</span> 
              is the largest expense, reaching 
              <span class="font-semibold text-teal-700">{{biggestExpense.percentage}}%</span> 
              of total operational costs 
              (Rp. {{biggestExpense.amount}}).
            </p>
          {{else}}
            <p class="text-lg text-gray-500 mt-4">No operational cost data entered yet.</p>
          {{/if}}
        </div>

        <!-- Document Completeness -->
        <div class="mt-10">
          <h3 class="text-2xl font-semibold text-teal-700">Document Completeness</h3>
          <div class="flex gap-3 items-start py-3 mt-5">
            <img
              src="https://api.builder.io/api/v1/image/assets/TEMP/07f51810f5a8ec72f99a964de708e535be5afefe?placeholderIfAbsent=true&apiKey=ac04cd396e1f47f18955cd19640f183d"
              alt="Checkmark"
              class="object-contain shrink-0 w-5 rounded aspect-square"
            />
            <span>Financial Report {{#if revenue}}✓{{/if}}</span>
          </div>
          <div class="flex gap-3 items-start py-3 mt-2">
            <img
              src="https://api.builder.io/api/v1/image/assets/TEMP/887a221a718e07029faaf64255641f813cfbf431?placeholderIfAbsent=true&apiKey=ac04cd396e1f47f18955cd19640f183d"
              alt="Checkmark"
              class="object-contain shrink-0 w-5 rounded aspect-square"
            />
            <span>Sales Record {{#if sales}}✓{{/if}}</span>
          </div>
          <div class="flex gap-3 items-start py-3 mt-2">
            <img
              src="https://api.builder.io/api/v1/image/assets/TEMP/4809160e8bf8862d1b2b4c7165060c1229b7004f?placeholderIfAbsent=true&apiKey=ac04cd396e1f47f18955cd19640f183d"
              alt="Checkmark"
              class="object-contain shrink-0 w-5 rounded aspect-square"
            />
            <span>Expense Record {{#if totalExpenses}}✓{{/if}}</span>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="flex gap-5 justify-between self-center mt-20 ml-72 max-w-full text-base font-medium text-center w-[323px]">
          <a href="/mitra/gri-1?gri_id={{gri_id}}" class="px-10 py-3 text-teal-700 bg-white rounded-xl border border-teal-700 hover:bg-teal-50 transition">
            Previous
          </a>
          <a href="/mitra/form-gri" class="px-10 py-3 text-white bg-orange-500 rounded-xl hover:bg-orange-600 transition">
            Submit
          </a>
        </nav>

      </article>
    </div>
  </section>
</main>

<style>
  /* Responsive table */
  @media (max-width: 768px) {
    table {
      font-size: 0.875rem;
    }
    
    th, td {
      padding: 0.5rem !important;
    }
  }
  
  /* Striped rows */
  tbody tr:nth-child(even):not(.bg-teal-50):not(.bg-orange-50):not(.bg-gray-100) {
    background-color: #f9fafb;
  }
</style>