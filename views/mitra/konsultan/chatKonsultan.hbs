    <script>
        // Session timer functionality
        let sessionTime = {
            hours: 0,
            minutes: 55,
            seconds: 55
        };

        function updateTimerDisplay() {
            const hoursElement = document.querySelector('.timer-hours');
            const minutesElement = document.querySelector('.timer-minutes');
            const secondsElement = document.querySelector('.timer-seconds');

            if (hoursElement) hoursElement.textContent = sessionTime.hours.toString().padStart(2, '0');
            if (minutesElement) minutesElement.textContent = sessionTime.minutes.toString().padStart(2, '0');
            if (secondsElement) secondsElement.textContent = sessionTime.seconds.toString().padStart(2, '0');
        }

        function startTimer() {
            setInterval(() => {
                if (sessionTime.seconds > 0) {
                    sessionTime.seconds--;
                } else if (sessionTime.minutes > 0) {
                    sessionTime.minutes--;
                    sessionTime.seconds = 59;
                } else if (sessionTime.hours > 0) {
                    sessionTime.hours--;
                    sessionTime.minutes = 59;
                    sessionTime.seconds = 59;
                }
                updateTimerDisplay();
            }, 1000);
        }

        // Message input functionality
        function setupMessageInput() {
            const messageInput = document.querySelector('input[placeholder="Type a message"]');
            const sendButton = document.querySelector('button[aria-label="Send message"]');

            if (messageInput && sendButton) {
                sendButton.addEventListener('click', () => {
                    const message = messageInput.value.trim();
                    if (message) {
                        // Here you would typically send the message to a server
                        console.log('Sending message:', message);
                        messageInput.value = '';
                    }
                });

                messageInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        sendButton.click();
                    }
                });
            }
        }

        // Initialize functionality when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            // Add timer classes for easier selection
            const timerElements = document.querySelectorAll('.bg-orange-500 span');
            if (timerElements.length >= 3) {
                timerElements[0].classList.add('timer-hours');
                timerElements[1].classList.add('timer-minutes');
                timerElements[2].classList.add('timer-seconds');
            }

            updateTimerDisplay();
            startTimer();
            setupMessageInput();
        });
    </script>
