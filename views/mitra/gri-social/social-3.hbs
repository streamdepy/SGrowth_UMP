<!-- Template entry -->
<template id="benefit_item_tpl">
  <div class="benefit-item border border-gray-200 rounded-2xl p-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
      <div>
        <label class="block pb-2 text-base font-medium">Benefit Type</label>
        <select class="hi-benefit-type w-full px-8 py-4 text-base rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition">
          <option value="">Select</option>
          <option value="Life Insurance">Life Insurance</option>
          <option value="Healthcare">Healthcare</option>
          <option value="Disability Support">Disability Support</option>
          <option value="Maternity Leave">Maternity Leave</option>
          <option value="Pension Plan">Pension Plan</option>
          <option value="Stock Ownership">Stock Ownership</option>
          <option value="Other">Other</option>
        </select>
        <input type="text" class="hi-benefit-other w-full px-4 py-3 mt-3 border rounded-lg bg-slate-50 hidden" placeholder="Specify other benefit">
      </div>

      <div>
        <label class="block pb-2 text-base font-medium">Provided to Full-Time Employees</label>
        <select class="hi-full-time w-full px-8 py-4 text-base rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition">
          <option value="">Select</option>
          <option value="yes">Yes</option>
          <option value="no">No</option>
        </select>
      </div>

      <div>
        <label class="block pb-2 text-base font-medium">Provided to Part-Time Employees</label>
        <select class="hi-part-time w-full px-8 py-4 text-base rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition">
          <option value="">Select</option>
          <option value="yes">Yes</option>
          <option value="no">No</option>
        </select>
      </div>
    </div>

    <div class="mt-6 grid grid-cols-1 md:grid-cols-[1fr_auto] gap-4">
      <input type="text" class="hi-notes w-full px-8 py-4 text-base rounded-2xl border border-gray-300 bg-slate-50"
             placeholder="Notes (optional)">
      <button type="button" class="hire-remove px-4 py-2 border rounded-xl text-gray-700 hover:bg-gray-50">
        Remove Entry
      </button>
    </div>
  </div>
</template>

<script>
  document.addEventListener('DOMContentLoaded', function(){
    const list   = document.getElementById('benefit_list');
    const addBtn = document.getElementById('benefit_add_item');
    const tpl    = document.getElementById('benefit_item_tpl');

    // Function to add new entry
    addBtn.addEventListener('click', () => {
      const clone = tpl.content.firstElementChild.cloneNode(true);
      list.appendChild(clone);
      attachHandlers(clone);
    });

    function attachHandlers(item){
      const benefitSel = item.querySelector('.hi-benefit-type');
      const benefitOther = item.querySelector('.hi-benefit-other');

      function syncOther(sel, other){
        const isOther = sel && sel.value === 'Other';
        toggleEl(other, isOther);
        if (!isOther && other) other.value = '';
      }

      if (benefitSel){
        benefitSel.addEventListener('change', () => syncOther(benefitSel, benefitOther));
        syncOther(benefitSel, benefitOther);
      }

      const removeBtn = item.querySelector('.hire-remove');
      if (removeBtn){
        removeBtn.addEventListener('click', () => item.remove());
      }
    }

    function toggleEl(el, show) {
      if (el) el.classList.toggle('hidden', !show);
    }
  });
</script>
