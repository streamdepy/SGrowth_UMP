<!-- Template entry for Training Hours -->
<template id="training_item_tpl">
  <div class="training-item border border-gray-200 rounded-2xl p-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-5">
      <div>
        <label class="block pb-2 text-base font-medium">Gender</label>
        <select class="hi-gender w-full px-8 py-4 text-base rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition">
          <option value="">Select</option>
          <option value="Female">Female</option>
          <option value="Male">Male</option>
          <option value="Non-binary">Non-binary</option>
          <option value="Prefer not to say">Prefer not to say</option>
        </select>
      </div>

      <div>
        <label class="block pb-2 text-base font-medium">Employee Category</label>
        <select class="hi-category w-full px-8 py-4 text-base rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition">
          <option value="">Select</option>
          <option value="Full-time">Full-time</option>
          <option value="Part-time">Part-time</option>
          <option value="Temporary">Temporary</option>
          <option value="Contractor">Contractor</option>
        </select>
      </div>

      <div>
        <label class="block pb-2 text-base font-medium">Training Hours</label>
        <input type="number" min="0" class="hi-hours w-full px-8 py-4 text-base rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition" placeholder="Training hours per employee">
      </div>
      <div>
        <label class="block pb-2 text-base font-medium">Total Employees</label>
        <input type="number" min="0" id="total_employees" value="0"
          class="w-full px-8 py-4 text-base rounded-2xl border border-gray-300 bg-slate-50 outline-none hover:ring focus:ring-2 focus:ring-teal-600 transition" placeholder="Total number of employees">
      </div>
    </div>


    <div class="mt-4 flex justify-end">
      <button type="button" class="remove-btn px-4 py-2 border rounded-xl text-gray-700 hover:bg-gray-50">
        Remove Entry
      </button>
    </div>
  </div>
</template>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const addBtn = document.getElementById('training_add_item');
    const list = document.getElementById('training_list');
    const tpl = document.getElementById('training_item_tpl');

    addBtn.addEventListener('click', function() {
      const clone = tpl.content.firstElementChild.cloneNode(true);
      list.appendChild(clone);
      const removeBtn = clone.querySelector('.remove-btn');
      removeBtn.addEventListener('click', function() {
        clone.remove();
        recomputeAll(); // Recompute after removal
      });
      recomputeAll(); // Recompute when new item is added
    });

    // Automatic summary calculation
    function recomputeAll() {
      let totalTrainingHours = 0;
      let totalEmployees = 0;

      list.querySelectorAll('.training-item').forEach(item => {
        const trainingHours = parseFloat(item.querySelector('.hi-hours').value || 0);
        totalTrainingHours += trainingHours;
        totalEmployees += 1; // Counting each entry as an employee
      });

      const avgTrainingHours = totalEmployees > 0 ? (totalTrainingHours / totalEmployees).toFixed(2) : 0;

      document.getElementById('sum_training_hours').textContent = totalTrainingHours.toString();
      document.getElementById('sum_employees').textContent = totalEmployees.toString();
      document.getElementById('sum_avg_hours').textContent = avgTrainingHours;
    }

    // Initial computation
    recomputeAll();
  });
</script>
